RewriteEngine On

# Manejar todos los dominios
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/admin/
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/api/
RewriteCond %{REQUEST_URI} !^/redirect\.php
RewriteCond %{REQUEST_URI} !^/index\.php
RewriteCond %{REQUEST_URI} !^/stats\.php
RewriteCond %{REQUEST_URI} !^/qr\.php

# Capturar el código y pasarlo a redirect.php
RewriteRule ^([a-zA-Z0-9_-]+)/?$ redirect.php?code=$1 [L,QSA]

# Configuración de seguridad
Options -Indexes
<FilesMatch "\.(env|json|lock|gitignore|htaccess|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>
RewriteEngine On

# Si vienen de /acortador/stats.php, redirigir a /stats.php
RewriteRule ^acortador/stats\.php$ /stats.php [R=301,L,QSA]

# Si vienen de /acortador/ con cualquier cosa, redirigir a /
RewriteRule ^acortador/(.*)$ /$1 [R=301,L,QSA]