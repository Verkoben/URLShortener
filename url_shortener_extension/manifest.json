{
  "manifest_version": 3,
  "name": "Gestor de URLs Cortas",
  "short_name": "URL Manager",
  "version": "1.0.2",
  "description": "Gestiona tus URLs acortadas como favoritos. Importa, exporta y organiza todos tus enlaces cortos.",
  "author": "URL Shortener",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage", "tabs", "clipboardWrite"],
  "host_permissions": [
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}